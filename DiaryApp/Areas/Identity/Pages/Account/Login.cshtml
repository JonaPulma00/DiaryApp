@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-[calc(100vh-300px)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold bg-gradient-to-b from-white via-grey-200 to-blue-300 bg-clip-text text-transparent mb-4 py-2">
                @ViewData["Title"]
            </h1>
            <p class="text-slate-400 text-sm">Usa tu cuenta local para iniciar sesión</p>
        </div>

        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-8 shadow-2xl">
            <form id="account" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/50 text-red-400 px-4 py-3 rounded-lg text-sm" role="alert"></div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                    <input asp-for="Input.Email"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-slate-300 mb-2">Password</label>
                    <input asp-for="Input.Password"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="••••••••"
                           type="password" />
                    <span asp-validation-for="Input.Password" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="Input.RememberMe"
                           type="checkbox"
                           class="w-4 h-4 bg-slate-900/50 border-slate-600 rounded text-blue-600 focus:ring-2 focus:ring-blue-500" />
                    <label asp-for="Input.RememberMe" class="ml-2 text-sm text-slate-300">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit"
                            type="submit"
                            class="w-full py-4 px-4 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg shadow-lg transition-all duration-200 transform hover:scale-[1.02]">
                        Log in
                    </button>
                </div>

                <div class="space-y-2 pt-4 border-t border-slate-700/50">
                    <p class="text-center">
                        <a id="forgot-password"
                           asp-page="./ForgotPassword"
                           class="text-blue-400 hover:text-blue-300 text-sm transition-colors">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </p>
                    <p class="text-center">
                        <a asp-page="./Register"
                           asp-route-returnUrl="@Model.ReturnUrl"
                           class="text-blue-400 hover:text-blue-300 text-sm transition-colors">
                            Regístrate como nuevo usuario
                        </a>
                    </p>
                    <p class="text-center">
                        <a id="resend-confirmation"
                           asp-page="./ResendEmailConfirmation"
                           class="text-slate-400 hover:text-slate-300 text-sm transition-colors">
                            Reenviar confirmación de email
                        </a>
                    </p>
                </div>
            </form>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-8 shadow-2xl">
                <h3 class="text-lg font-semibold text-white mb-4 text-center">O continúa con</h3>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="flex flex-col gap-3">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="w-full py-3 px-4 bg-slate-700 hover:bg-slate-600 text-white font-medium rounded-lg transition-all duration-200"
                                    name="provider"
                                    value="@provider.Name"
                                    title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="bg-slate-800/30 backdrop-blur-sm border border-slate-700/30 rounded-xl p-6 text-center">
                <p class="text-slate-400 text-sm">
                    No hay servicios de autenticación externos configurados.
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}