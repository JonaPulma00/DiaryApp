@{
    ViewData["Title"] = "Home Page";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-white mb-4">Welcome  to your DiaryApp</h1>
        <p class="text-xl text-slate-400">Start capturing your thoughts and memories</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-8 text-center">
            <div class="text-4xl font-bold text-blue-400 mb-2">@ViewBag.TotalEntries</div>
            <div class="text-slate-300 font-medium">Total Entries</div>
        </div>

        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-8 text-center">
            <div class="text-4xl font-bold text-purple-400 mb-2">@ViewBag.ThisMonth</div>
            <div class="text-slate-300 font-medium">This Month</div>
        </div>

        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-8 text-center">
            <div class="text-4xl font-bold text-emerald-400 mb-2">@ViewBag.ThisWeek</div>
            <div class="text-slate-300 font-medium">This Week</div>
        </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a asp-controller="DiaryEntries" asp-action="Create"
           class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors text-center text-lg">
            Start Writing
        </a>
        <a asp-controller="DiaryEntries" asp-action="Index"
           class="px-8 py-4 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-lg transition-colors text-center text-lg">
            View All Entries
        </a>
    </div>
</div>