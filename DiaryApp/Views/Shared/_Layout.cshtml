<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiaryApp</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a class="text-xl font-bold text-gray-800" asp-area="" asp-controller="Home" asp-action="Index">DiaryApp</a>
                
                <button class="md:hidden text-gray-600" id="mobile-menu-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                
                <ul class="hidden md:flex space-x-6">
                    <li>
                        <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="MyPage">My Page</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="DiaryEntries" asp-action="Index">Diary</a>
                    </li>
                </ul>
            </div>
            
            <!-- Mobile menu -->
            <ul class="hidden mt-4 space-y-2 md:hidden" id="mobile-menu">
                <li>
                    <a class="block text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="block text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li>
                    <a class="block text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="MyPage">My Page</a>
                </li>
                <li>
                    <a class="block text-gray-700 hover:text-gray-900" asp-area="" asp-controller="DiaryEntries" asp-action="Index">Diary</a>
                </li>
            </ul>
        </nav>
    </header>
    
    <div class="container mx-auto px-4 flex-grow">
        <main class="py-8">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-t bg-gray-50 mt-8">
        <div class="container mx-auto px-4 py-6 text-center text-gray-600 text-sm">
            &copy; 2025 - DiaryApp - <a class="hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toggle mobile menu
        document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
            document.getElementById('mobile-menu')?.classList.toggle('hidden');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>